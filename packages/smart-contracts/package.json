{
  "name": "hardhat-project",
  "version": "0.0.1",
  "scripts": {
    "prepare": "hardhat typechain",
    "compile": "hardhat compile",
    "coverage": "cross-env TS_NODE_TRANSPILE_ONLY=1 HARDHAT_DEPLOY_FIXTURE=true HARDHAT_COMPILE=true hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"./test/*.ts\"",
    "lint": "prettier --check \"**/*.{ts,js,sol}\" && eslint \"**/*.{js,ts}\" && solhint 'contracts/**/*.sol'",
    "lint:fix": "prettier --write \"**/*.{ts,js,sol}\" && eslint --fix \"**/*.{js,ts}\" && solhint --fix 'contracts/**/*.sol'",
    "solhint": "solhint 'contracts/**/*.sol'",
    "solhint:fix": "solhint --fix 'contracts/**/*.sol'",
    "local:dev": "hardhat node --no-deploy",
    "gas": "cross-env REPORT_GAS=true TS_NODE_TRANSPILE_ONLY=1 HARDHAT_DEPLOY_FIXTURE=true HARDHAT_COMPILE=true hardhat test",
    "size": "cross-env REPORT_SIZE=true hardhat compile",
    "unit-test": "cross-env TS_NODE_TRANSPILE_ONLY=1 HARDHAT_DEPLOY_FIXTURE=true HARDHAT_COMPILE=true hardhat test",
    "test": "yarn coverage",
    "typechain": "hardhat typechain",
    "slither": "slither . --filter-paths \"node_modules|contracts/mocks|contracts/dependencies\" --exclude solc-version,timestamp,conformance-to-solidity-naming-conventions"
  },
  "devDependencies": {
    "@chainlink/contracts": "^0.4.1",
    "@defi-wonderland/smock": "^2.0.7",
    "@fintechstudios/eslint-plugin-chai-as-promised": "^3.1.0",
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.6.0",
    "@openzeppelin/contracts-upgradeable": "^4.6.0",
    "@openzeppelin/hardhat-upgrades": "^1.18.1",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.0",
    "@types/chai": "^4.3.1",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^9.1.1",
    "@types/mocha-each": "^2.0.0",
    "@types/node": "^17.0.41",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "cross-env": "^7.0.3",
    "csvtojson": "^2.0.10",
    "dotenv": "^16.0.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eth-permit": "^0.2.1",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.6.8",
    "hardhat": "^2.9.9",
    "hardhat-contract-sizer": "^2.5.1",
    "hardhat-gas-reporter": "^1.0.8",
    "merkletreejs": "^0.2.31",
    "mocha-each": "^2.0.1",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.20",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.8.1",
    "typechain": "^8.1.0",
    "typescript": "^4.7.3"
  },
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "solc": "^0.8.14-fixed"
  }
}
