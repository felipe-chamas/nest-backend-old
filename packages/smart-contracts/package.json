    "local:dev": "hardhat node --no-deploy",
    "size": "cross-env REPORT_SIZE=true hardhat compile",
    "test": "hardhat test"
  },
  "devDependencies": {
    "@fintechstudios/eslint-plugin-chai-as-promised": "^3.1.0",
