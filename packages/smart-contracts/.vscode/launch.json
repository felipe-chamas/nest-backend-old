{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "hardhat test",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/hardhat",
      "args": ["test"],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "fork test",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "yarn",
      "args": ["test:fork"],
      "cwd": "${workspaceFolder}"
    }
  ]
}
