{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "target": "es2015",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@*": ["src/*"],
      "@models/*": ["src/models/*"],
      "@common/*": ["src/common/*"]
    }
  },
  "exclude": ["**/*.spec.ts", "**/*.test.ts"],
  "include": ["**/*.ts"]
}
